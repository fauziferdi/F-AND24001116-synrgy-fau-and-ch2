<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ParentUtama">
        <item name="android:background">@color/bgPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/head</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyleWrap" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleInputLayanan" >
        <item name="android:layout_width">279dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleSwitchTip">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">299dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/head_first</item>
    </style>

    <style name="ViewHasil">
        <item name="android:layout_width">286dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextHasil" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ImgStyle">
        <item name="android:layout_width">199dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">162dp</item>
        <item name="android:src">@drawable/img_bagus</item>
    </style>

    <style name="RadioStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>




</resources>